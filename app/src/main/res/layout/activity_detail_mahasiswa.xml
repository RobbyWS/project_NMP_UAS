<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".DetailMahasiswaActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Foto Mahasiswa -->
        <ImageView
            android:id="@+id/imgFotoDetail"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="16dp"
            android:scaleType="centerCrop"
            android:src="@drawable/catnerd"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Nama -->
        <TextView
            android:id="@+id/txtNamaDetail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Nama Mahasiswa"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toEndOf="@id/imgFotoDetail"
            app:layout_constraintTop_toTopOf="@id/imgFotoDetail"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- NRP -->
        <TextView
            android:id="@+id/txtNRPDetail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="160423075"
            android:textColor="#555555"
            android:textSize="14sp"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toEndOf="@id/imgFotoDetail"
            app:layout_constraintTop_toBottomOf="@id/txtNamaDetail"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Spinner -->
        <Spinner
            android:id="@+id/spnInfo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/imgFotoDetail"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- TextView untuk isi paragraf -->
        <TextView
            android:id="@+id/txtInfo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Paragraf informasi akan tampil di sini."
            android:textSize="14sp"
            android:textColor="#333333"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/spnInfo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Label program -->
        <TextView
            android:id="@+id/lblProgram"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Program:"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/txtInfo"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- RadioGroup Program -->
        <RadioGroup
            android:id="@+id/radioGroupProgram"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/lblProgram"
            app:layout_constraintStart_toStartOf="parent">

            <RadioButton
                android:id="@+id/radioDSAI"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DSAI" />

            <RadioButton
                android:id="@+id/radioNCS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NCS" />

            <RadioButton
                android:id="@+id/radioIMES"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="IMES" />

            <RadioButton
                android:id="@+id/radioDMT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DMT" />

            <RadioButton
                android:id="@+id/radioGD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GD" />
        </RadioGroup>

        <!-- Tombol Request Friend -->
        <Button
            android:id="@+id/btnRequestFriend"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Request Friend"
            android:textColor="#FFFFFF"
            android:backgroundTint="#4CAF50"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="32dp"
            app:layout_constraintTop_toBottomOf="@id/radioGroupProgram"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/btnExit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:backgroundTint="#F20336"
            android:text="EXIT"
            android:textColor="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnRequestFriend" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
